{
	"geode": "4.8.0",
	"gd": {
		"win": "2.2074",
		"mac": "2.2074"
	},
	"id": "silverstar.scroll_clicking",
	"name": "Scroll Clicking",
	"version": "v2.1.1",
	"developers": [
		"SILVERSTAR",
		"HexCodesGMD"
	],
	"description": "",
	"incompatibilities": {
		"syzzi.click_between_frames": {
			"importance": "breaking",
			"version": ">=1.0.0"
		},
		"prevter.smooth-scroll": {
			"importance": "breaking",
			"version": ">=1.0.0"
		}
	},
	"dependencies": {
		"geode.custom-keybinds": {
			"version": ">=v1.10.4",
			"importance": "required"
		}
	},
	"links": {
		"source": "https://github.com/silver984/Scroll-Clicking"
	},
	"tags": [
		"offline",
		"gameplay",
		"cheat"
	],
	"settings": {
		"toggle": {
			"name": "Turn Scroll Clicking ON",
			"type": "bool",
			"default": true
		},
		"interval-settings": {
			"type": "title",
			"name": "Interval Setting(s)"
		},
		"hold-interval": {
			"type": "int",
			"name": "Hold interval",
			"default": 8,
			"min": 1,
			"max": 20,
			"control": {
				"slider": false,
				"arrows": false
			},
			"description": "How many frames to hold/n<cr>Based on frames, and so cannot be in decimals</c>",
			"enable-if": "toggle"
		},
		"release-interval": {
			"type": "int",
			"name": "Release interval",
			"default": 8,
			"min": 1,
			"max": 20,
			"control": {
				"slider": false,
				"arrows": false
			},
			"description": "How many frames to release/n<cr>Based on frames, and so cannot be in decimals</c>",
			"enable-if": "toggle && stable-scroll"
		},
		"modes": {
			"type": "title",
			"name": "Mode(s)"
		},
		"directional-mode": {
			"name": "Directional Mode",
			"type": "bool",
			"default": true,
			"description": "Hold and release intervals get switched if you scroll down",
			"enable-if": "toggle"
		},
		"inverted-directional-mode": {
			"name": "Invert Directional Mode",
			"type": "bool",
			"default": false,
			"enable-if": "toggle && directional-mode"
		},
		"velocity-mode": {
			"name": "Velocity Mode",
			"type": "bool",
			"default": true,
			"description": "Hold and release intervals shrink the faster you scroll",
			"enable-if": "toggle"
		},
		"max-velocity": {
			"type": "int",
			"name": "Max velocity",
			"default": 8,
			"min": 5,
			"max": 30,
			"control": {
				"slider": false,
				"arrows": false
			},
			"enable-if": "toggle && velocity-mode"
		},
		"scroll-types": {
			"type": "title",
			"name": "Scroll Type(s)"
		},
		"stable-scroll": {
			"name": "Stable Scroll",
			"type": "bool",
			"default": true,
			"description": "Clicking mechanism is constant",
			"enable-if": "toggle"
		},
		"dual-settings": {
			"type": "title",
			"name": "Dual Setting(s)"
		},
		"p1": {
			"name": "Player 1",
			"type": "bool",
			"description": "Scroll Click For Player 1",
			"enable-if": "toggle",
			"default": true
		},
		"p2": {
			"name": "Player 2",
			"type": "bool",
			"description": "Scroll Click For Player 2",
			"enable-if": "toggle",
			"default": true
		}
	}
}
